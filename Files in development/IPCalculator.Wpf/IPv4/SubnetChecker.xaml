<Window x:Class="IpCalculator.Wpf.IPv4.SubnetChecker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:IpCalculator.Wpf.IPv4"
        mc:Ignorable="d"
        Title="Subnet Checker" Height="300" Width="350" Closing="SubnetChecker_OnClosing">
    <Grid>
        <Border x:Name="bdrColor" Margin="5,10" BorderBrush="Gray" BorderThickness="5" Height="230">
            <StackPanel>
                <Label FontSize="24" HorizontalContentAlignment="Center">Is your subnet valid?</Label>
                <TextBox x:Name="txtSubnet" Width="200" TextChanged="TxtSubnet_OnTextChanged"/>
                <Button Width="80" Margin="5" Content="Check!" Click="ButtonBase_OnClick"/>
                <Label HorizontalContentAlignment="Center" x:Name="lblResult" />
                <Label x:Name="lblAnswer" HorizontalContentAlignment="Center" FontSize="32"/>
           </StackPanel>
        </Border>
    </Grid>
</Window>
