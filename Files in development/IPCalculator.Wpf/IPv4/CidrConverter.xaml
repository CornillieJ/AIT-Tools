<Window x:Class="IpCalculator.Wpf.IPv4.CidrConverter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:IpCalculator.Wpf.IPv4"
        mc:Ignorable="d"
        Title="CidrConverter" Height="450" Width="800" Closed="CidrConverter_OnClosed">
    <Grid>
        <Border x:Name="bdrColor" Margin="5,10" BorderBrush="Gray" BorderThickness="5" Height="230">
            <StackPanel>
                <Label FontSize="24" HorizontalContentAlignment="Center">Convert CIDR to Bitstring</Label>
                <TextBox x:Name="txtCidr" Width="200" TextChanged="TxtCidr_OnTextChanged"/>
                <Button x:Name="txtConvert" Width="100" Margin="5" Content="Convert!" Click="TxtConvert_OnClick"/>
                <TextBox Margin="10" HorizontalContentAlignment="Center" x:Name="txtResult" TextChanged="TxtResult_OnTextChanged" Width="400"/>
                <Label x:Name="lblAnswer" HorizontalContentAlignment="Center" FontSize="32"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
